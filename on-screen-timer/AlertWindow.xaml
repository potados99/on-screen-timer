<Window x:Class="on_screen_timer.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:on_screen_timer"
        mc:Ignorable="d"
        Title="AlertWindow" Height="200" Width="300"
        WindowStyle="None"
        Background="{x:Null}"
        AllowsTransparency="True"
        Topmost="true">

    <Border CornerRadius="8,8,8,8"  Background="#99000000" BorderBrush="#99000000" BorderThickness="40">
        <Grid>
            <Label x:Name="MessageLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Content="타이머 완료" FontSize="35" FontWeight="bold" Foreground="White"/>
        </Grid>
    </Border>
</Window>
